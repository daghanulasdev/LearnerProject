@model List<LearnerProject.Models.Entities.Course>
@{
    ViewBag.Title = "Kurslarim";
    Layout = "~/Views/TeacherLayout/Index.cshtml";
}

@{
    int count = 0;
}
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Kurs Adi</th>
        <th>Aciklama</th>
        <th>Fiyat</th>
        <th>Kategori</th>
        <th>Islemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td><img src="@item.ImageUrl" style="height:50px;width:50px" /></td>
            <td>@item.CourseName</td>
            <td>@(item.Description.Length>50 ? item.Description.Substring(0,50) +"..." : item.Description )</td>
            <td>@item.Price ₺</td>
            <td>@item.Category.CategoryName</td>
            <td>
                <a href="/TeacherCourse/DeleteCourse/@item.CourseId" class="btn btn-outline-danger"><i class="fa fa-trash"></i>Sil</a>
                <a href="/TeacherCourse/UpdateCourse/@item.CourseId" class="btn btn-outline-success"><i class="fa fa-pen"></i>Guncelle</a>
            </td>
        </tr>
    }
</table>
<br />
<a href="/TeacherCourse/AddCourse" class="btn btn-outline-primary">Yeni Kurs Ekle</a>
